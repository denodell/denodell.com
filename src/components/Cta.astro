---
const { href, inverse } = Astro.props;
const target = href?.startsWith("http") ? "_blank" : "_self";
---

<a
  class:list={[
    "w-fit rounded-xl md:rounded-2xl font-medium tracking-tight text-base md:text-lg p-4 md:p-6 py-2 md:py-3 border-1 border-solid border-black",
    inverse ? "" : "bg-black text-white"
  ]}
  href={href} target={target}><slot /></a
>
