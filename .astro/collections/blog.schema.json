{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string",
          "minLength": 100,
          "maxLength": 160,
          "errorMessage": {
            "maxLength": "Short description must be between 100 and 160 characters long."
          }
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string"
        },
        "readingTime": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]+$",
            "errorMessage": {
              "pattern": "Tags must contain only lowercase aâ€“z letters with no spaces or symbols."
            }
          },
          "minItems": 1,
          "maxItems": 4,
          "errorMessage": {
            "maxItems": "You can use up to 4 tags only."
          }
        },
        "slug": {
          "type": "string"
        },
        "devToSlug": {
          "type": "string"
        },
        "relatedPosts": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "collection"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "slug",
                  "collection"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "shortDescription",
        "date",
        "author",
        "readingTime",
        "image",
        "tags",
        "slug"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}